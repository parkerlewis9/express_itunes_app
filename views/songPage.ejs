<% include partials/header %>

<audio id="audio_preview" src="<%= data.previewUrl %>"></audio> 

<div id="hiddenData">
	<div id="artistData"><%= data.artistName %></div>
	<div id="trackData"><%= data.trackName %></div>
	<div id="albumData"><%= data.collectionCensoredName %></div>
	<div id="imageData"><%= data.artworkUrl100 %></div>
</div>


<div id="outerBox">
	
	<div id="squareBox">


		<div id="secondView">
			<form class="guessInput">
				Guess the Song or Artist! <input type="text" name="guess" class="guess" autofocus>
			</form>
		</div>
		
		<div id="correctView">
			<img src="http://png-2.findicons.com/files/icons/744/juicy_fruit/128/refresh.png" alt="correct" class= "correctImg">
			<h1>Correct</h1>
			<div id="artist"></div>
			<div id="track"></div>
			<div id="album"></div>
			<img src="" alt="albumArt" id="albumArt">

		</div>

		<div id="wrongView">
			<img src="http://png-2.findicons.com/files/icons/744/juicy_fruit/128/refresh.png" alt="correct" class= "correctImg">
			<div>Wrong Try Again</div>
			<div id="artistWrong"></div>
			<div id="trackWrong"></div>
			<div id="albumWrong"></div>
			<img src="" alt="albumArtWrong" id="albumArtWrong">

		</div>

		<div id="statsPage">
			<div id="numCorrect"></div>
			<div id="numWrong"></div>
		</div>



	</div>



</div>





<% include partials/footer %>