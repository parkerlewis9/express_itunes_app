<% include ../partials/header %>

	<div id="outerBox">
		
		<div id="usersBox">
			<table class="table table-hover">
				<thead>
					<th>Name</th>
					<th>Score</th>
					<th>Edit</th>
					<th>Delete</th>
				</thead>
				<tbody>
					<% scores.forEach(function(score) { %>
						<tr>
							<td><a href="/scores/<%= score.id %>"><%= score.name %></a></td>
							<td><%= score.highScore %></td>
							<td>
								<form action="/scores/<%= score.id %>/edit" method="GET">
									<input type="submit" value="Edit">
								</form>

							</td>
							<td>
								<form action="/scores/<%= score.id %>?_method=DELETE" method="POST">
									<input type="submit" value="Delete">
								</form>
							</td>
						</tr>
					<%	})%>


				</tbody>
	




			</table>




		</div>



	</div>
<% include ../partials/footer %>